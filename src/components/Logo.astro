const ALT = 'EvOCRO';
const SRC = '/odyssey-theme/assets/images/logo.jpg'; // lascia il path assoluto con base del repo
---

<a href="/" aria-label={ALT} class="site-logo">
  <img src={SRC} alt={ALT} />
</a>

<style>
  .site-logo {
    display: inline-flex;
    align-items: center;
    gap: .5rem;
    text-decoration: none;
  }
  .site-logo img {
    /* aumenta qui lâ€™altezza del logo */
    height: 96px;
    width: auto;
    display: block;
  }

  @media (max-width: 640px) {
    .site-logo img {
      height: 72px;
    }
  }
</style>
