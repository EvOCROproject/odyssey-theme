---
const ALT = 'EvOCRO';
const SRC = '/odyssey-theme/assets/images/logo.jpg';
const size = Astro.props.size || 'large';
---

<a href="/" aria-label={ALT} class={`site-logo ${size}`}>
  <img src={SRC} alt={ALT} />
</a>

<style>
  .site-logo {
    display: inline-flex;
    align-items: center;
    text-decoration: none;
  }

  /* Logo grande (header) */
  .site-logo.large img {
    height: 96px;
    width: auto;
    display: block;
  }

  /* Logo piccolo (footer) */
  .site-logo.small img {
    height: 48px;
    width: auto;
    display: block;
  }

  @media (max-width: 640px) {
    .site-logo.large img { height: 72px; }
    .site-logo.small img { height: 40px; }
  }
</style>
