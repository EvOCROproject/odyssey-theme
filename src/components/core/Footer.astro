---
import { Icon } from 'astro-icon/components';
import Container from '../core/Container.astro';
import Plug from './Plug.astro';

const {
  footerSocials = [],
  footerLists   = [],
  footerLogos   = [], // ⬅️ nuovo
  copyrightName = '',
  background    = 'var(--theme-surface-1)',
  color         = 'var(--theme-on-surface-1)',
  showPlug: showPlug = true,
} = Astro.props;

function isExternalLink(url) {
  return url?.startsWith('http');
}
---

<footer style={`--footer-bg:${background}; --footer-color:${color}`}>
  <Container>
    <div class="footer-grid__container">
      <div class="footer-brand__container">
        <!-- Logo del sito: rimosso su richiesta. (Niente slot "logo") -->

        <!-- Social icons (se/quando le aggiungeremo) -->
        <ul class="footer-socials__list">
          {footerSocials.length > 0 &&
            footerSocials.map((social) => (
              <li class="footer-socials__item">
                <a
                  href={social.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="footer-socials__link"
                  title={`Open ${social.name} profile`}
                >
                  <Icon name={social.icon} width={24} height={24} />
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      {footerLists.length > 0 &&
        footerLists.map((list) => (
          <div>
            <p><strong>{list.title}</strong></p>
            <ul class="footer-link__list">
              {(list.items ?? []).map((item) => (
                <li>
                  <a
                    href={item.slug}
                    target={isExternalLink(item.slug) ? '_blank' : '_self'}
                    rel={isExternalLink(item.slug) ? 'noopener noreferrer' : undefined}
                  >
                    {item.title}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>

    {footerLogos.length > 0 && (
      <div class="footer-logos">
        {footerLogos.map((logo) => (
          <img src={logo.src} alt={logo.alt} />
        ))}
      </div>
    )}

    <div class="footer-copyright__container">
      {showPlug && <Plug />}
      <p>Copyright &copy; {new Date().getFullYear()} {copyrightName}</p>
    </div>
  </Container>
</footer>

<style>
  footer {
    --footer-bg: var(--theme-primary);
    --footer-color: var(--theme-on-primary);
    background-color: var(--footer-bg);
    color: var(--footer-color);
    border-top-left-radius: var(--theme-shape-radius);
    border-top-right-radius: var(--theme-shape-radius);
  }

  .footer-grid__container {
    padding: 6vh 0 1rem 0;
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 1.25rem;
  }

  /* Social */
  .footer-socials__list {
    margin: 1rem 0 0;
    padding: 0;
    display: flex;
    list-style: none;
    gap: .5rem;
  }

  /* Link list */
  .footer-link__list {
    margin: 0;
    padding: 0;
    list-style: none;
  }
  .footer-link__list li {
    margin-bottom: 0.5rem;
  }
  .footer-link__list li a {
    text-decoration: none;
  }
  .footer-link__list li a:hover {
    opacity: 0.84;
  }

  /* Row loghi uniformi */
  .footer-logos {
    margin: 2rem 0 0.5rem;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: clamp(1rem, 2.5vw, 2rem);
  }
  .footer-logos img {
    height: 48px;            /* ⬅️ stessa altezza per tutti */
    width: auto;
    object-fit: contain;
    display: block;
    filter: none;            /* mantieni colori originali */
    transition: transform 0.15s ease;
  }
  .footer-logos img:hover {
    transform: scale(1.05);
  }

  .footer-copyright__container {
    margin-top: 1rem;
    display: flex;
    flex-direction: column;
  }
  .footer-copyright__container p {
    font-size: var(--font-size-sm);
  }

  @media (max-width: 1024px) {
    .footer-grid__container {
      padding: 5vh 0 1rem 0;
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (max-width: 640px) {
    .footer-grid__container {
      padding: 4vh 0 1rem 0;
      grid-template-columns: 1fr;
    }
  }
</style>
