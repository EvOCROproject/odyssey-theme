---
import { Icon } from 'astro-icon/components';
import Container from '../core/Container.astro';
import Plug from './Plug.astro';

const {
  footerSocials = [],
  footerLists   = [],
  copyrightName = '',
  background    = 'var(--theme-surface-1)',
  color         = 'var(--theme-on-surface-1)',
  showPlug: showPlug = true,
} = Astro.props;

function isExternalLink(url) {
  return url?.startsWith?.('http');
}
---

<footer style={`--footer-bg:${background}; --footer-color:${color}`}>
  <Container>
    <div class="footer-grid__container">
      <div class="footer-brand__container">
        <div>
          <slot name="logo" />
        </div>

        <ul class="footer-socials__list">
          {footerSocials.length > 0 &&
            footerSocials.map((social) => (
              <li class="footer-socials__item">
                <a
                  href={social.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="footer-socials__link"
                  title={`Open ${social.name} profile`}
                >
                  <Icon name={social.icon} width={24} height={24} />
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      {footerLists.length > 0 &&
        footerLists.map((list) => (
          <div>
            <p><strong>{list.title}</strong></p>
            <ul class="footer-link__list">
              {(list.items ?? []).map((item) => (
                <li>
                  <a
                    href={item.slug}
                    target={isExternalLink(item.slug) ? '_blank' : '_self'}
                    rel={isExternalLink(item.slug) ? 'noopener noreferrer' : undefined}
                  >
                    {item.title}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>

    {/* --- NUOVA SEZIONE LOGHI PARTNER --- */}
    <div class="footer-logos">
      {/* Logo “ampio” del progetto */}
      <img
        src="/odyssey-theme/assets/footer-logos/TitleCol.jpg"
        alt="EvOCRO"
      />
      {/* Commissione Europea */}
      <a href="https://european-union.europa.eu/index_en" target="_blank" rel="noopener noreferrer" title="European Commission">
        <img
          src="/odyssey-theme/assets/footer-logos/eulogo.png"
          alt="European Commission"
        />
      </a>
      {/* MSCA */}
      <a href="https://marie-sklodowska-curie-actions.ec.europa.eu/" target="_blank" rel="noopener noreferrer" title="MSCA">
        <img
          src="/odyssey-theme/assets/footer-logos/msca.png"
          alt="MSCA"
        />
      </a>
      {/* ARU */}
      <a href="https://www.aru.ac.uk" target="_blank" rel="noopener noreferrer" title="Anglia Ruskin University">
        <img
          src="/odyssey-theme/assets/footer-logos/aru.png"
          alt="Anglia Ruskin University"
        />
      </a>
    </div>

    <div class="footer-copyright__container">
      {showPlug && <Plug />}
      <p>Copyright &copy; {new Date().getFullYear()} {copyrightName}</p>
    </div>
  </Container>
</footer>

<style>
  footer {
    --footer-bg: var(--theme-primary);
    --footer-color: var(--theme-on-primary);
    min-height: 40vh;
    background-color: var(--footer-bg);
    color: var(--footer-color);
    border-top-left-radius: var(--theme-shape-radius);
    border-top-right-radius: var(--theme-shape-radius);
  }

  .footer-grid__container {
    padding: 10vh 0 1rem 0;
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
  }

  .footer-socials__list {
    margin: 1rem 0;
    padding: 0;
    display: flex;
    list-style: none;
  }
  .footer-socials__item { margin-right: 0.5rem; }

  .footer-link__list {
    margin: 0;
    padding: 0;
    list-style: none;
  }
  .footer-link__list li { margin-bottom: 0.5rem; }
  .footer-link__list li a { text-decoration: none; }
  .footer-link__list li a:hover { opacity: 0.84; }

  /* --- LOGHI PARTNER --- */
  .footer-logos {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;   /* centrati in orizzontale */
    gap: 1.5rem;
    padding-top: 1.5rem;
  }

  .footer-logos img {
    max-height: 48px;          /* <— regola qui la dimensione uniforme */
    width: auto;
    object-fit: contain;
    display: block;
    opacity: 0.95;
    transition: opacity .2s ease;
    filter: none;               /* mantiene i colori dei loghi in tutti i temi */
  }

  .footer-logos img:hover { opacity: 1; }

  .footer-copyright__container {
    display: flex;
    flex-direction: column;
    margin-top: 1rem;
  }
  .footer-copyright__container p {
    font-size: var(--font-size-sm);
  }

  @media (max-width: 768px) {
    .footer-grid__container :first-child { grid-column: 1/-1; }
    .footer-grid__container {
      padding: 5vh 0;
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
  }
  @media (max-width: 600px) {
    .footer-grid__container {
      padding: 5vh 0;
      grid-template-columns: 1fr;
      gap: 1rem;
    }
    .footer-logos img { max-height: 40px; } /* più piccolo su mobile */
    .footer-copyright__container { flex-direction: column; }
  }
</style>
