---
import { Icon } from 'astro-icon/components';
import { Container, Button } from '@components/odyssey-theme';
import settings from '../../../config/settings.js';
import { ThemeSwitcher } from '../../theme-switcher/theme-switcher';
---

<Container>
  <section class="hero-section__section">
    <div class="hero-section__text">
      <h1>EvOCRO</h1>
      <p>Evolutionary Origins of Cognition in Crocodiles</p>

      <div class="hero-btns__container">
        <Button href="/odyssey-theme/project" customIcon>
          Project
          <Fragment slot="icon"><Icon name="ic:baseline-chevron-right" /></Fragment>
        </Button>
        <Button href="/odyssey-theme/publications" unelevated>Publications</Button>
      </div>

      {settings.enableThemeSwitcher && <ThemeSwitcher client:only="lit" />}
    </div>

    <div class="hero-section__image">
      <picture>
        <img
          src="/odyssey-theme/assets/images/home/classic-hero.jpg"
          alt="EvOCRO"
          id="home-hero-image"
        />
      </picture>
    </div>
  </section>
</Container>

<style>
  .hero-section__section {
  margin: 2rem auto 0 auto;
  min-height: calc(100vh - var(--navbar-height) - 4rem);
  display: grid;
  grid-template-columns: 1fr 1fr;
  align-items: center;
  gap: 1rem;
}

  .hero-section__text {
    justify-self: center;
    max-width: 42rem; /* piÃ¹ ampio per titoli grandi */
  }

  /* ðŸ‘‘ Titolo grande */
  .hero-section__text h1 {
    margin: 0 0 0.25rem 0;
    font-size: clamp(2.4rem, 4vw + 0.5rem, 4.25rem);
    line-height: 1.05;
    letter-spacing: -0.02em;
  }

  /* âœ¨ Sottotitolo piÃ¹ grande e leggibile */
  .hero-section__text p {
    margin: 0 0 1.25rem 0;
    font-size: clamp(1.125rem, 1.2vw + 0.5rem, 1.5rem);
    line-height: 1.4;
    color: var(--theme-on-surface-2);
  }

  .hero-btns__container {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-top: 0.5rem;
    margin-right: 1rem;
  }

  .hero-section__image {
    display: flex;
  }
  .hero-section__image img {
    width: 100%;
    height: 100%;
    max-height: 80vh;
    object-fit: cover;
    border-radius: var(--theme-shape-radius);
  }

  /* ðŸ“± Mobile */
  @media (max-width: 768px) {
    .hero-section__section {
      grid-template-columns: 1fr;
    }
    .hero-section__text h1 {
      font-size: clamp(2rem, 6.5vw, 3rem);
    }
    .hero-section__text p {
      font-size: clamp(1rem, 3.8vw, 1.25rem);
    }
  }
</style>

