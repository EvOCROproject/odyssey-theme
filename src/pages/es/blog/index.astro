---
import Layout from '../../../layouts/Page.astro';
import BASE from '../../../utils/base-url';
---

<Layout
  title="Blog"
  description="Artículos y actualizaciones del proyecto EvOCRO."
>
  <section class="blog-hero">
    <div class="lang-switcher">
      <a href={`${BASE}blog/`}>EN</a>
      <a href={`${BASE}it/blog/`}>IT</a>
      <a href={`${BASE}es/blog/`} class="active">ES</a>
    </div>

    <h1>Blog</h1>
    <p>Artículos y actualizaciones del proyecto EvOCRO.</p>
  </section>

  <section class="posts-grid">
    <p>Próximamente...</p>
  </section>
</Layout>

<style>
  .blog-hero {
    margin: var(--section-margin) auto;
    max-width: 56rem;
  }

  .lang-switcher {
    display: flex;
    justify-content: flex-end;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
  }

  .lang-switcher a {
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    border: 1px solid var(--theme-on-surface-2);
    font-size: var(--font-size-sm);
    text-decoration: none;
  }

  .lang-switcher a.active {
    background: var(--theme-primary);
    color: var(--theme-on-primary);
  }

  .posts-grid {
    margin: var(--section-margin) auto;
  }
</style>
