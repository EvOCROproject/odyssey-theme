---
import { Container, FeatureCard } from '@components/odyssey-theme';
import Layout from '../layouts/Page.astro';
import HomeHeroSection from '../components/sections/heros/HomeHeroSection.astro';
---

<Layout
  title="EvOCRO â€” Evolutionary Origins of Cognition in Crocodiles"
  description="Evolutionary Origins of Cognition in Crocodiles"
>
  <HomeHeroSection />

  <Container>
    <section class="feature-card__section">
      <h2>Media</h2>
<p>Stories from the field: blog posts and video diaries.</p>
<div class="feature-card__grid">
  <FeatureCard href="/odyssey-theme/blog" title="Blog" imgSrc="/odyssey-theme/assets/images/home/screenshots/blog" />
  <FeatureCard href="/odyssey-theme/vlog" title="Vlog" imgSrc="/odyssey-theme/assets/images/home/screenshots/vlog" />
</div>
    </section>
  </Container>

  <Container>
    <section class="feature-card__section">
      <h2>Updates</h2>
<p>News and upcoming events from the EvOCRO project.</p>
<div class="feature-card__grid">
  <FeatureCard href="/odyssey-theme/news"   title="News"   imgSrc="/odyssey-theme/assets/images/home/screenshots/news" />
  <FeatureCard href="/odyssey-theme/events" title="Events" imgSrc="/odyssey-theme/assets/images/home/screenshots/events" />
</div>
    </section>
  </Container>

  <Container>
    <section class="feature-card__section">
      <h2>Research Group</h2>
<p>Meet the team and our partner institutions.</p>
<div class="feature-card__grid">
  <FeatureCard href="/odyssey-theme/team"            title="Team"         imgSrc="/odyssey-theme/assets/images/home/screenshots/team" />
  <FeatureCard
  href="/odyssey-theme/affiliations"
  title="Affiliations"
  imgSrc="/odyssey-theme/assets/images/home/screenshots/affiliations"
/>
</div>
    </section>
  </Container>
</Layout>

<style>
	.feature-card__section {
		margin: var(--section-margin) auto;
	}
	.feature-card__grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: var(--theme-grid-gap);
	}
	@media (max-width: 768px) {
		.feature-card__grid {
			grid-template-columns: 1fr;
		}
	}
</style>
