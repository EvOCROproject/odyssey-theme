---
import { Container } from '@components/odyssey-theme';
import Layout from '../layouts/Page.astro';
import HomeHeroSection from '../components/sections/heros/HomeHeroSection.astro';

const seo = {
  title: 'EvOCRO â€” Evolutionary Origins of Cognition in Crocodiles',
  description: 'Evolutionary Origins of Cognition in Crocodiles',
  image: '/assets/social/home-share.png',
};
---

<Layout seo={seo}>
  <HomeHeroSection />

  <Container>
    <section class="feature-card__section">
      <h2>Media</h2>
      <p>Stories from the field: blog posts and video diaries.</p>
      <div class="feature-card__grid">
        <a class="feature-card" href="/blog">
          <div class="feature-card__image">
            <img
              src="/assets/images/home/screenshots/blog.webp"
              alt="Blog screenshot"
              loading="lazy"
            />
          </div>
          <h3>Blog</h3>
        </a>

        <a class="feature-card" href="/vlog">
          <div class="feature-card__image">
            <img
              src="/assets/images/home/screenshots/vlog.webp"
              alt="Vlog screenshot"
              loading="lazy"
            />
          </div>
          <h3>Vlog</h3>
        </a>
      </div>
    </section>
  </Container>

  <Container>
    <section class="feature-card__section">
      <h2>Updates</h2>
      <p>News and upcoming events from the EvOCRO project.</p>
      <div class="feature-card__grid">
        <a class="feature-card" href="/news">
          <div class="feature-card__image">
            <img
              src="/assets/images/home/screenshots/news.webp"
              alt="News screenshot"
              loading="lazy"
            />
          </div>
          <h3>News</h3>
        </a>

        <a class="feature-card" href="/events">
          <div class="feature-card__image">
            <img
              src="/assets/images/home/screenshots/events.webp"
              alt="Events screenshot"
              loading="lazy"
            />
          </div>
          <h3>Events</h3>
        </a>
      </div>
    </section>
  </Container>

  <Container>
    <section class="feature-card__section">
      <h2>Research Group</h2>
      <p>Meet the team and our partner institutions.</p>
      <div class="feature-card__grid">
        <a class="feature-card" href="/team">
          <div class="feature-card__image">
            <img
              src="/assets/images/home/screenshots/team.webp"
              alt="Team screenshot"
              loading="lazy"
            />
          </div>
          <h3>Team</h3>
        </a>

        <a class="feature-card" href="/affiliations">
          <div class="feature-card__image">
            <img
              src="/assets/images/home/screenshots/affiliations.webp"
              alt="Affiliations screenshot"
              loading="lazy"
            />
          </div>
          <h3>Affiliations</h3>
        </a>
      </div>
    </section>
  </Container>
</Layout>

<style>
  .feature-card__section {
    margin: var(--section-margin) auto;
  }

  .feature-card__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--theme-grid-gap);
  }

  @media (max-width: 768px) {
    .feature-card__grid {
      grid-template-columns: 1fr;
    }
  }

  .feature-card {
    display: block;
    background: var(--theme-surface-1);
    border-radius: var(--theme-shape-radius);
    text-decoration: none;
    color: inherit;
    overflow: hidden;
    box-shadow: 0 1px 4px rgba(0,0,0,0.06);
    transition: transform 0.15s ease, box-shadow 0.15s ease;
  }

  .feature-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 3px 10px rgba(0,0,0,0.12);
  }

  .feature-card__image {
    width: 100%;
    aspect-ratio: 16/9;
    overflow: hidden;
  }

  .feature-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .feature-card h3 {
    margin: 0;
    padding: 0.75rem 1rem 1rem;
    font-size: 1.05rem;
  }
</style>
