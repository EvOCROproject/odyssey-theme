---
import Layout from '../layouts/Page.astro';
---

<Layout title="Partner Institutions" description="Institutions collaborating with EvOCRO">
  <h1>Affiliations</h1>
  <p>We collaborate with the following institutions:</p>

  <div class="affiliations">
    <div class="logo">
      <img src="/odyssey-theme/assets/affiliations/uni1.png" alt="University 1" />
      <p>University 1</p>
    </div>
    <div class="logo">
      <img src="/odyssey-theme/assets/affiliations/uni2.png" alt="Institute 2" />
      <p>Institute 2</p>
    </div>
  </div>
</Layout>

<style>
  .affiliations{
    display:grid; gap:var(--theme-grid-gap);
    grid-template-columns:repeat(3,minmax(0,1fr));
    margin: var(--section-margin) auto;
  }
  @media (max-width:1024px){ .affiliations{ grid-template-columns:repeat(2,1fr);} }
  @media (max-width:640px){ .affiliations{ grid-template-columns:1fr;} }
  .logo{ background:var(--theme-surface-1); border-radius:var(--theme-shape-radius); padding:1rem; text-align:center; }
  .logo img{ max-width:220px; height:auto; }
</style>
