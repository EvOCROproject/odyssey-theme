---
import Layout from '../../layouts/Page.astro';
import { Container } from '@components/odyssey-theme';

const seo = {
  title: 'Team | EvOCRO',
  description: 'The EvOCRO project team',
};

const members = [
  {
    name: 'Nome Cognome',
    role: 'PI / Postdoc / PhD',
    bio: 'Breve bio o ambiti di ricerca.',
    img: '/odyssey-theme/assets/images/team/sample.jpg',
    links: [{ label: 'Email', href: 'mailto:evocroproject@gmail.com' }],
  },
];
---


<Layout {seo}>
  <Container>
    <section class="team">
      <h1>Team</h1>
      <ul class="grid">
        {members.map((m) => (
          <li class="card">
            {m.img && <img class="avatar" src={m.img} alt={m.name} loading="lazy" />}
            <h3>{m.name}</h3>
            <p class="role">{m.role}</p>
            <p class="bio">{m.bio}</p>
            {m.links?.length > 0 && (
              <p class="links">
                {m.links.map((l, i) => (
                  <Fragment>
                    <a href={l.href} target={l.href.startsWith('http') ? '_blank' : undefined} rel="noopener">{l.label}</a>
                    {i < m.links.length - 1 && ' â€¢ '}
                  </Fragment>
                ))}
              </p>
            )}
          </li>
        ))}
      </ul>
    </section>
  </Container>
</Layout>

<style>
  .team { margin: var(--section-margin) auto; }
  .grid {
    list-style: none; padding: 0; margin: 0;
    display: grid; gap: var(--theme-grid-gap);
    grid-template-columns: repeat(3, minmax(0,1fr));
  }
  @media (max-width: 1024px) { .grid { grid-template-columns: repeat(2,1fr); } }
  @media (max-width: 640px)  { .grid { grid-template-columns: 1fr; } }
  .card {
    background: var(--theme-surface-1);
    border-radius: var(--theme-shape-radius);
    padding: 1rem;
  }
  .avatar {
    width: 100%; border-radius: var(--theme-shape-radius);
    aspect-ratio: 4/3; object-fit: cover; margin-bottom: .5rem;
  }
  .role { color: var(--theme-on-surface-2); margin: .25rem 0 .5rem; }
  .bio { margin: 0 0 .5rem; }
  .links a { text-decoration: none; }
</style>
